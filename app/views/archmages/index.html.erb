<h1>Archmages</h1>
<%= link_to '[New Archmage]', new_archmage_path%>
 
<ul>
  <% @archmages.each do |archmage| %>
    <li>
      <h2><%= link_to "#{archmage.name}, #{archmage.title}", archmage_path(archmage.id)%></h3>
      <%= link_to '[Edit]', edit_archmage_path(archmage.id), method: :patch %>
      <%= link_to '[Delete]', archmage, :confirm => 'Are you sure?',:method => :delete %>
      
    </li>
  <% end %>
</ul>